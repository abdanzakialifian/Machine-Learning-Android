<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".main.MainActivity">

    <Button
        android:id="@+id/btn_custom_view"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Custom View" />

    <Button
        android:id="@+id/btn_image_classification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image Classification" />

    <Button
        android:id="@+id/btn_mlkit_recognition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ML Kit Recognition" />

    <Button
        android:id="@+id/btn_image_classification_tflite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image Classification TensorFlow Lite" />

    <Button
        android:id="@+id/btn_object_detection_tflite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Object Detection TensorFlow Lite" />

    <Button
        android:id="@+id/btn_prediction_tflite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prediction TensorFlow Lite" />

    <Button
        android:id="@+id/btn_image_classification_media_pipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Image Classification MediaPipe" />

    <Button
        android:id="@+id/btn_audio_classification_media_pipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Audio Classification MediaPipe" />

    <Button
        android:id="@+id/btn_text_classification_media_pipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text Classification MediaPipe" />

</LinearLayout>